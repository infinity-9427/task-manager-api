{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "outDir": "./dist",
    "noImplicitAny": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "rootDir": ".",
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}